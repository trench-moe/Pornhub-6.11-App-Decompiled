<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="22sp" android:textColor="@color/orange" android:layout_gravity="left" android:id="@+id/dialog_txtTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="14dp" android:text="@string/app_name_ph"/>
    <View android:id="@+id/dialog_vSeparatorTitle" android:background="@color/orange" android:layout_width="match_parent" android:layout_height="2dp" android:layout_below="@+id/dialog_txtTitle"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/dialog_llyContent" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="48dp" android:layout_above="@+id/dialog_vSeparatorContent" android:layout_below="@+id/dialog_vSeparatorTitle"/>
    <View android:id="@+id/dialog_vSeparatorContent" android:background="#555" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/dialog_llyButtons"/>
    <LinearLayout android:id="@+id/dialog_llyButtons" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="14sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/dialog_btnCancel" android:background="@drawable/pornhub_holo_list_selector_holo_dark" android:layout_width="0dp" android:layout_height="48dp" android:text="@string/cancel" android:layout_weight="1"/>
        <View android:background="#555" android:layout_width="1dp" android:layout_height="match_parent"/>
        <Button android:enabled="true" android:textSize="14sp" android:textColor="@drawable/textview_textcolor_selector_state" android:gravity="center" android:id="@+id/dialog_btnOk" android:background="@drawable/pornhub_holo_list_selector_holo_dark" android:layout_width="0dp" android:layout_height="48dp" android:text="@string/ok" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
