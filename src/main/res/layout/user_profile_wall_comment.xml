<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/pornhub_grey_dark" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/user_avatar" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="4dp" android:src="@drawable/thumb_preview" android:scaleType="fitXY" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="2dp" android:layout_marginRight="6dp" android:layout_toRightOf="@+id/user_avatar">
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="top" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/orange" android:id="@+id/user_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/pornhub_txt_grey" android:gravity="center_horizontal" android:id="@+id/comment_age" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/ic_date" android:drawablePadding="2dp"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textColor="@android:color/white" android:id="@+id/comment_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp"/>
    </LinearLayout>
</RelativeLayout>
