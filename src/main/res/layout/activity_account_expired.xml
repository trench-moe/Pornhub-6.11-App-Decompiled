<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:focusableInTouchMode="true" android:descendantFocusability="beforeDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="@color/pornhub_grey_dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" app:contentInsetStartWithNavigation="0dp">
        <TextView android:textAppearance="@style/ToolbarTitleStyle" android:ellipsize="end" android:id="@+id/toolbar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:maxLines="1" android:layout_marginStart="7dp"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/expired_background" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar">
        <TextView android:textSize="30sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/title" android:paddingLeft="5dp" android:paddingTop="20dp" android:paddingRight="5dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/expired_page_title" android:layout_alignParentTop="true" android:textAllCaps="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/subtitle" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/expired_page_subtitle" android:layout_below="@+id/title"/>
        <TextView android:id="@+id/button_browse_free" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/browse_free" android:layout_below="@+id/subtitle" style="@style/ButtonSignUp"/>
        <TextView android:id="@+id/button_renew" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/renew_premium" android:layout_below="@+id/button_browse_free" style="@style/ButtonGetPremium"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/button_renew" android:layout_centerHorizontal="true">
            <CheckBox android:gravity="center" android:id="@+id/checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/remember_choice"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
